# Database Configuration
DATABASE_URL=postgresql://repensar:repensar_password@localhost:5432/repensar_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=repensar
DB_PASSWORD=repensar_password
DB_NAME=repensar_db

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Email Configuration (SMTP)
# Leave empty to disable email sending (emails will be logged instead)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@repensar.com
EMAIL_FROM_NAME=Repensar

# For Gmail SMTP:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the app password as SMTP_PASSWORD
#
# For other providers:
# - SendGrid: smtp.sendgrid.net:587
# - Mailgun: smtp.mailgun.org:587
# - AWS SES: email-smtp.us-east-1.amazonaws.com:587

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Redis (Optional - for production token blacklist & rate limiting)
# REDIS_URL=redis://localhost:6379/0

# Development
DEBUG=true
